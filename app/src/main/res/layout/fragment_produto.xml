<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_produto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:src="@drawable/account_circle" />

    <TextView
        android:id="@+id/textView_nome_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/img_produto"
        android:text="Nome_produto" />

    <TextView
        android:id="@+id/textView_precoProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_nome_produto"
        android:layout_alignBottom="@+id/textView_nome_produto"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:text="preco" />


</RelativeLayout>